<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Детали брони"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/Begins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Семья Бэгинсов"
        android:textColor="#144F77"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/Booking"
        app:layout_constraintTop_toBottomOf="@+id/Booking"/>

    <TextView
        android:id="@+id/Hifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------------------------------------------"
        android:background="#00000000"
        app:layout_constraintLeft_toLeftOf="@+id/Booking"
        app:layout_constraintTop_toBottomOf="@id/Begins"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/Mesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество мест"
        android:textSize="20dp"
        android:background="#00000000"
        app:layout_constraintLeft_toLeftOf="@id/Booking"
        app:layout_constraintTop_toBottomOf="@id/Hifen"/>

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата и время"
        android:background="#00000000"
        app:layout_constraintTop_toBottomOf="@id/Hifen"
        app:layout_constraintRight_toRightOf="@id/Hifen"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 Человек"
        android:textSize="25dp"
        android:textColor="#144F77"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Mesta"
        app:layout_constraintLeft_toLeftOf="@id/Mesta"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 марта 8PM"
        android:textSize="25dp"
        android:textColor="#144F77"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Date"
        app:layout_constraintRight_toRightOf="@id/Hifen"/>

    <TextView
        android:id="@+id/Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пакет меню"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/Human"
        app:layout_constraintLeft_toLeftOf="@id/Booking"/>

    <ImageView
        android:id="@+id/Besh"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/s1200"
        app:layout_constraintTop_toBottomOf="@id/Menu"
        app:layout_constraintLeft_toLeftOf="@id/Menu" />

    <TextView
        android:id="@+id/Barmak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Беш-бармак"
        android:textSize="25dp"
        android:textColor="#144F77"
        app:layout_constraintTop_toTopOf="@+id/Besh"
        app:layout_constraintLeft_toRightOf="@+id/Besh"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Порция"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/Besh"
        app:layout_constraintTop_toBottomOf="@id/Barmak"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="50dp"
        app:layout_constraintRight_toRightOf="@id/Hifen"
        app:layout_constraintTop_toBottomOf="@id/Menu"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="50dp"
        app:layout_constraintRight_toRightOf="@id/Hifen"
        app:layout_constraintTop_toTopOf="@id/Menu"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/Rectangle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/Besh"/>

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:textSize="20dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/Rectangle"
        app:layout_constraintLeft_toLeftOf="@id/Booking"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Беш-бармак"
        android:textSize="25dp"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@id/Price"
        app:layout_constraintLeft_toLeftOf="@id/Price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 20"
        android:textSize="25dp"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@id/Price"
        app:layout_constraintRight_toRightOf="@id/Hifen"/>

    <TextView
        android:id="@+id/Human"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Люди"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/Rectangle"
        app:layout_constraintLeft_toLeftOf="@id/Booking"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/Eddy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/eddy"
        app:layout_constraintTop_toBottomOf="@id/Human"
        app:layout_constraintLeft_toLeftOf="@id/Booking"/>

    <ImageView
        android:id="@+id/Bin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bin"
        app:layout_constraintTop_toBottomOf="@id/Human"
        app:layout_constraintLeft_toRightOf="@id/Eddy"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/Dauni"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dauni"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/Human"
        app:layout_constraintLeft_toRightOf="@id/Bin"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/Cage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cage"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/Human"
        app:layout_constraintLeft_toRightOf="@id/Dauni"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/Background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/Human"
        app:layout_constraintLeft_toRightOf="@id/Cage"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ ∞"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/Background"
        app:layout_constraintLeft_toLeftOf="@id/Background"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>